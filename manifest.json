{
  "manifest_version": 3,
  "name": "Typing Bot",
  "short_name": "TypingBot",
  "version": "1.0",
  "author": "JdM",
  "homepage_url": "https://www.rmbi.ch/jdm",
  "action": {
    "default_title": "Typing Bot",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "js": [
        "scripts/10fastfingers.js"
      ],
      "matches": [
        "*://*.10fastfingers.com/*"
      ]
    },
    {
      "run_at": "document_end",
      "js": [
        "scripts/typing-speed.js"
      ],
      "matches": [
        "*://*.typing-speed.net/*"
      ]
    }
  ]
}
